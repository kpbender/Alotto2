<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#1769b5"
                android:centerColor="#4972a4"
                android:endColor="#817bda"
                android:angle="90"/>
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#79a4c4"/>
            <padding android:left="15dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient android:startColor="#4191d2"
                android:centerColor="#4e4bae"
                android:endColor="#7a90d1"
                android:angle="90"/>
            <corners android:radius="30dp"/>
            <stroke android:width="3dp" android:color="#95b9d4"/>
            <padding android:left="4dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>